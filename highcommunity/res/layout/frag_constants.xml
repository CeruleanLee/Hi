<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defult_color_white"
        android:paddingBottom="58dp"
        android:paddingTop="58dp"
        >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/img_about_logo"
    android:layout_gravity="center_horizontal"
    />
<TextView
    android:id="@+id/tv_version"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="13sp"
    android:textColor="@color/Defult_Color_AppGreen"
    android:textStyle="bold|italic"
    android:layout_marginTop="12dp"
    android:layout_gravity="center_horizontal"
    android:text="嗨社区 v2.0"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="@dimen/padding_12"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/defult_color_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/defult_color_white"
            android:gravity="center_vertical"
            android:text="客服电话"
            android:textSize="@dimen/font_small"
            android:textColor="@color/Defult_Color_MidGrey" />
        <TextView
            android:id="@+id/tv_constants_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/defult_color_white"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/padding_12"
            android:text="400-663-4899"
            android:paddingRight="@dimen/padding_12"
            android:singleLine="true"
            android:textSize="@dimen/font_small"
            android:textColor="@color/Defult_Color_MidGrey" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_e8e8e8"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="@dimen/padding_12"
        android:background="@color/defult_color_white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/defult_color_white"
            android:gravity="center_vertical"
            android:text="QQ"
            android:textSize="@dimen/font_small"
            android:textColor="@color/Defult_Color_MidGrey" />
        <TextView
            android:id="@+id/tv_constants_qq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/defult_color_white"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/padding_12"
            android:text="235978845"
            android:paddingRight="@dimen/padding_12"
            android:singleLine="true"
            android:textSize="@dimen/font_small"
            android:textColor="@color/Defult_Color_MidGrey" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_e8e8e8"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="@dimen/padding_12"
        android:background="@color/defult_color_white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/defult_color_white"
            android:gravity="center_vertical"
            android:text="微信公众号"
            android:textSize="@dimen/font_small"
            android:textColor="@color/Defult_Color_MidGrey" />
        <TextView
            android:id="@+id/tv_constants_wx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/defult_color_white"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/padding_12"
            android:text="嗨社区"
            android:paddingRight="@dimen/padding_12"
            android:singleLine="true"
            android:textSize="@dimen/font_small"
            android:textColor="@color/Defult_Color_MidGrey" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_e8e8e8"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defult_color_white"
        android:gravity="bottom|center_horizontal"
        android:text="\@四川天美生活科技有限公司"
        android:textSize="@dimen/font_small"
        android:paddingBottom="12dp"
        android:layout_gravity="bottom|center_horizontal"
        android:textColor="@color/Defult_Color_Grey" />
</LinearLayout>